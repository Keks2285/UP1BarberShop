<Page x:Class="BarberShop.Buhgalter.ReportDocumentViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarberShop.Stocker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SupplyDocumentViewer">

    <Grid Background="Bisque">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="159*"></ColumnDefinition>
            <ColumnDefinition Width="641*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <RichTextBox x:Name="richTextBox" Grid.Column="1">

            <FlowDocument x:Name="SupplyDoc"  Background="white" >
                <Paragraph >
                </Paragraph>
            </FlowDocument>

        </RichTextBox>
        <Button Content="Печать" x:Name="PrintBtn" VerticalAlignment="Top" Height="41" Width="139" Margin="0,10,0,0" Click="PrintBtn_Click" Cursor="Hand"/>
        <Button Content="Сохранить" x:Name="SaveBtn" VerticalAlignment="Top" Height="41" Width="139" Margin="10,56,10,0" Click="SaveBtn_Click"/>

    </Grid>
</Page>
