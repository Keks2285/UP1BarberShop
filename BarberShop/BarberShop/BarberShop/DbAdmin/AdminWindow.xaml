<Window x:Class="BarberShop.DbAdmin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarberShop.DbAdmin"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800" MinWidth="800" MinHeight="400" WindowState="Maximized">
    <Grid Background="Bisque" KeyDown="Grid_KeyDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="479*"></ColumnDefinition>
            <ColumnDefinition Width="158*"></ColumnDefinition>
            <ColumnDefinition Width="163*"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Background="White" Margin="50,40,50,24">
            <ListView  x:Name="BackupsList"  SelectionChanged="BackupsList_SelectionChanged">

            </ListView>
        </Grid>
        <Button x:Name="CreatePoint" Content="Создать бэкап"  VerticalAlignment="Top" Click="CreatePoint_Click" Height="32" Margin="10,58,10,0" Grid.Column="1"/>
        <Button x:Name="DeletePoint" Grid.Column="2" Content="Удалить бэкап"   VerticalAlignment="Top"  Cursor="Hand" Height="32" Margin="10,58,10,0" Click="DeletePoint_Click"/>
    </Grid>
</Window>
